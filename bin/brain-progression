#!/usr/bin/env php
<?php

const GAME_NAME = 'brain-progression';

use function BrainGames\Games\BrainProgression\startBrainProgression;
use function BrainGames\Info\welcomePlayer;
use function BrainGames\Info\showRules;
use function BrainGames\Info\showResult;

require_once __DIR__ . '/../vendor/autoload.php';

$name = welcomePlayer();
showRules(GAME_NAME);
$quantityCorrectAnswer = startBrainProgression();
showResult($quantityCorrectAnswer, $name);

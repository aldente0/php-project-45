#!/usr/bin/env php 
<?php

const GAME_NAME = 'brain-even';

use function BrainGames\Games\startIsEvenGame;
use function BrainGames\Info\welcomePlayer;
use function BrainGames\Info\showRules;
use function BrainGames\Info\showResult;

require_once __DIR__ . '/../vendor/autoload.php';

$name = welcomePlayer();
showRules(GAME_NAME);
$quantityCorrectAnswer = startIsEvenGame();
showResult($quantityCorrectAnswer, $name);
